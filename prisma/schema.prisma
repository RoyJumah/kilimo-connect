generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  user_id   String   @id @default(uuid())
  email     String
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
  orders    Order[]

  @@unique([email, name])
}

model Products {
  product_id  String  @id @default(uuid())
  farmer_id   String?
  name        String
  description String
  ingredients String
  usage       String
  price       Int
  image       String
  quantity    Int?
  stripe_id   String
  farmer      Farmer? @relation(fields: [farmer_id], references: [farmer_id])
  orders      Order[] @relation("OrderToProducts")
}

model Order {
  order_id    String     @id @default(uuid())
  user_id     String
  stripe_id   String
  quantity    Int
  total_price Int
  status      String
  createdAt   DateTime?  @default(now())
  user        User       @relation(fields: [user_id], references: [user_id])
  products    Products[] @relation("OrderToProducts")
}

model Farmer {
  farmer_id     String     @id @default(uuid())
  name          String
  phone         String
  address       String
  farm_location String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  products      Products[]
}

enum Role {
  USER
  FARMER
}
